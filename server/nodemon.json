{
    "restartable": "rs",
    "ignore": [".git", "node_modules/**/node_modules"],
    "exec": "npm run serve",
    "verbose": true,
    "execMap": {
        "ts": "node --require ts-node/register"
    },
    "events": {
        "restart": "npm run lint"
    },
    "watch": ["src/"],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js,json,ts"
}